<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@700&family=Roboto+Mono:wght@300;400;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/fe5fe323b2.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="cover">
      <img src="img/coffee.gif" alt="" class="cover__img">
    </div>
    <div class="l-wrap">
      <header class="header">
        <h1 class="home"><a href="{{ '/' | url }}">
          <img src="/img/pagemelt-button.png">
        </a></h1>
        <ul class="nav">
          <li><a class="nav__link link" href="/about/">about</a><li>
          <li><a class="nav__link link" href="/posts/">library</a><li>
        </ul>
      </header>
      <div class="main">
        <h1 class="h1">@pagemelt</h1>
        <p>Mel Thomas</p>
        <p>she/they</p>
        <p>pagemelt@gmail.com</p>
        <div class="socials">
          <a href="https://open.spotify.com/user/122690037?si=7d3f4ca16bbe499e" class="link socials__link">
            <i class="fab fa-spotify" aria-hidden="true"></i>
          </a>
          <a href="https://www.tiktok.com/@pagemelt" class="link socials__link">
            <i class="fab fa-tiktok" aria-hidden="true"></i>
          </a>
          <a href="https://twitter.com/pagemelt" class="link socials__link">
            <i class="fab fa-twitter" aria-hidden="true"></i>
          </a>
        </div>
      </div>
      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>
    <!-- Current page: {{ page.url | url }} -->
    </div>
  </body>
</html>
